generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================================
// ENUMS
// =============================================================================

enum MediaType {
  VIDEO
  SPOTIFY
  IMAGE
  TEXT
}

enum UserRole {
  USER
  ADMIN
}

// =============================================================================
// USERS
// =============================================================================

model User {
  id        String   @id // Supabase Auth UUID
  username  String   @unique @db.VarChar(50)
  bio       String?  @db.VarChar(160)
  avatarUrl String?  @db.VarChar(500)
  isPrivate Boolean  @default(false) // Private profiles don't appear in search/explore
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tabs            Tab[]
  reviews         Review[]
  bookmarkedUsers UserBookmark[]   @relation("BookmarkOwner")
  bookmarkedBy    UserBookmark[]   @relation("BookmarkedUser")
  reviewBookmarks ReviewBookmark[]
  userTheme       UserTheme?

  @@map("users")
}

// =============================================================================
// AESTHETICS & THEMES
// =============================================================================

model Aesthetic {
  id          String  @id @default(uuid())
  slug        String  @unique
  name        String
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userThemes UserTheme[]

  @@map("aesthetics")
}

model UserTheme {
  id          String @id @default(uuid())
  userId      String @unique // One theme per user
  aestheticId String
  palette     String @default("default") // Palette name, validated by frontend

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  aesthetic Aesthetic @relation(fields: [aestheticId], references: [id])

  @@map("user_themes")
}

// =============================================================================
// TABS (Media type groupings: Movies, Books, etc.)
// =============================================================================

model Tab {
  id          String   @id @default(uuid())
  name        String   @db.VarChar(100)
  slug        String // URL-friendly version of name (auto-generated)
  description String?  @db.VarChar(200) // Optional short description (max 200 chars)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  reviews    Review[]
  categories Category[]

  @@unique([userId, slug]) // Tab slugs unique per user
  @@map("tabs")
}

// =============================================================================
// REVIEWS
// =============================================================================

model Review {
  id          String   @id @default(uuid())
  title       String   @db.VarChar(200)
  description String?  @db.VarChar(50000) // Markdown content
  author      String?  @db.VarChar(300) // Optional author/creator of the media
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Draft/Publish logic:
  // - null = draft (not visible publicly, only to owner)
  // - timestamp = published (visible publicly, edits are instant after this)
  publishedAt DateTime?

  // Media representation
  mediaType   MediaType
  mediaUrl    String?
  mediaConfig Json? // Type-specific config (e.g., { startTime: 30 } for videos)

  // Optional external link (separate from media)
  link        String?   @db.VarChar(2000)

  // Meta fields (user-defined key/value pairs like "Director: Denis Villeneuve")
  metaFields Json? // Array of { label: string, value: string }

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  tab    Tab    @relation(fields: [tabId], references: [id], onDelete: Cascade)
  tabId  String

  // Categories (many-to-many)
  categories ReviewCategory[]

  // Bookmarks
  bookmarkedBy ReviewBookmark[]

  @@map("reviews")
}

// =============================================================================
// CATEGORIES (Global tags: Sci-Fi, Favorite, etc.)
// =============================================================================

model Category {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(100)
  slug      String // URL-friendly version of name (auto-generated)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tab     Tab              @relation(fields: [tabId], references: [id], onDelete: Cascade)
  tabId   String
  reviews ReviewCategory[]

  @@unique([tabId, slug]) // Category slugs unique per tab
  @@map("categories")
}

// Junction table: Review <-> Category
model ReviewCategory {
  review     Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  reviewId   String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String

  @@id([reviewId, categoryId])
  @@map("review_categories")
}

// =============================================================================
// BOOKMARKS
// =============================================================================

// User bookmarking another user's profile
model UserBookmark {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  // The user who created the bookmark
  owner   User   @relation("BookmarkOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId String

  // The user being bookmarked
  bookmarkedUser   User   @relation("BookmarkedUser", fields: [bookmarkedUserId], references: [id], onDelete: Cascade)
  bookmarkedUserId String

  @@unique([ownerId, bookmarkedUserId]) // Can't bookmark same user twice
  @@map("user_bookmarks")
}

// User bookmarking a review
model ReviewBookmark {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  // The user who created the bookmark
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId String

  // The review being bookmarked
  review   Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  reviewId String

  @@unique([ownerId, reviewId]) // Can't bookmark same review twice
  @@map("review_bookmarks")
}
